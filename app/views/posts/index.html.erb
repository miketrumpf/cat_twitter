
<p id="notice"><%= notice %></p>
<h1>Search for A Twitter User's timeline</h1>

<%= form_tag("/posts/search", method: "get") do %>
  <h2> Twitter Handle </h2>
  <%= text_field_tag(:twitter_handle) %>
  <%= submit_tag("Search") %>
<% end %>

<h1 class="results" hidden=true >Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%-if @posts != []%>
  <%-user = @posts.first.user%>
  <table class= "table-responsive table-bordered">
    <thead>
      <tr>
        <th>User</th>
        <th>Tweet</th>
        <th>Fave Count</th>
        <th>Read</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag(user.profile_image_url.to_s, :class => "thumbnail") %></td>
          <td><%= "#{post.text}" %></td>
          <td><%= "#{post.favorite_count}"%></td>
          <td><%= link_to "Mark As Read", "#", :id => "read_button", :data => { :tweet_id => post.id }  %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%else %>
  <h3> Could Not find Any Posts.  Please Try again </h3>
<%end%>

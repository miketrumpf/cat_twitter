<%-if @posts != []%>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= "#{post.user.name}" %></td>
          <td><%= "#{post.text}" %></td>
          <td><%= link_to "Mark As Read", "#", :id => "read_button", :data => { :tweet_id => post.id } %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%else %>
  <h3> Could Not find Any Posts.  Please Try again </h3>
<%end%>

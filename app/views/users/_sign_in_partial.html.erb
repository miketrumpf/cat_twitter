<h2>Sign In</h2>


<%= form_tag sessions_path do %>
  <div class="input-group input-group-sm">
    <!-- <%= text_field_tag :twitter_handle, "", :id => "handle", placeholder: "Username", :class => "form-control" %> -->
    <%= text_field_tag :email, params[:email], :placeholder => "email", :class => "form-control" %>
    <%= password_field_tag :password, nil, placeholder: "password", class: "form-control" %>
  </div>


  <div class="btn-group" role="group" aria-label="Basic example">
    <!-- <%= submit_tag "Search", :id => "search", :type => "submit", :class => "btn" %> -->
    <%= submit_tag "Sign in", :class => "my_btn" %>
  </div>

<% end %>
